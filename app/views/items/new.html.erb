<%= form_for @item, :html=>{ :multipart => true } do |f| %>
  <p>
    <%= f.label :heading %><br />
    <%= f.text_field :heading %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => '100', :rows => '25' %>
  </p>
  <%= f.fields_for :latlon do |latlon_fields| %>
  <p>
    <%= latlon_fields.label :latitude %><br />
    <%= latlon_fields.text_field :latitude %><br />
  </p>
  <p>
    <%= latlon_fields.label :longitude %><br />
    <%= latlon_fields.text_field :longitude %>
  </p>
  <% end %>
  <p>
    <%= f.file_field 'photo' %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
